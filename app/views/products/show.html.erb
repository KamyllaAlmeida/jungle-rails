<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>

    <% if flash[:error] %>
      <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
  </header>

 

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>
  <% if current_user %>
    <%= render 'create_review'%>
  <% end %>
  
  <header class="page-header">
    <h3>Reviews</h3>
  </header>
  <div >
  <table>
    <thead>
      <tr>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |item| %>
        <%= render 'reviews', review: item[:review], blank_stars: item[:blank_stars]  %>
      <% end %>
    </tbody>
    </tfoot>
  </table>
</div>
  

</section>
